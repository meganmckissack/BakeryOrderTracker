@{
  Layout = "_Layout";
}

<body>
  @using BakeryOrderTracker.Models;

  <h1>Your Vendor List</h1>

  @if (@Model.Count == 0)
  {
    <h3>No vendors have been added yet!</h3>
  }

  <ul>
    @foreach (Vendor vendor in Model)
    {
      <li><a href="/vendors/@vendor.Id">@vendor.Name</a></li>
    }
  </ul>
  <a href='/vendors/new' class="link-success">Click here to create a new vendor</a>
  <p><a href='/' class="link-success">Back home</a></p>
</body>